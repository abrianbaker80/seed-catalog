{
    "name": "allenbaker/seed-catalog",
    "description": "A comprehensive seed catalog management system with AI-powered plant information retrieval",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=7.4",
        "ext-gd": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "composer/installers": "^2.0",
        "linkorb/jsmin-php": "^1.0",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "php-stubs/wordpress-stubs": "^6.7",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^2.0"
    },
    "autoload": {
        "classmap": [
            "includes/",
            "admin/",
            "public/"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform-check": true
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress",
        "test": "phpunit",
        "post-install-cmd": [
            "php -r \"if (!extension_loaded('zip')) { echo 'The zip extension is required. Please install or enable it.\\n'; exit(1); }\""
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "installer-paths": {
            "../../plugins/{$name}/": ["type:wordpress-plugin"]
        }
    }
}
